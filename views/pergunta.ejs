<%- include("./partials/header.ejs") %>
<%- include("./partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p>  <%= pergunta.descricao %> </p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responder</h3>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control" id="" cols="30" rows="10"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>"   >
            <button type="submit" class="btn mt-2 btn-success" >Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>

        <% respostas.forEach(resposta => { %>
           <div class=" mt-3 card">
               <div class="card-body">
                <%=  resposta.corpo %>
               </div>
           </div> 
        <% }) %>
    </div>
<%- include("./partials/footer.ejs") %>